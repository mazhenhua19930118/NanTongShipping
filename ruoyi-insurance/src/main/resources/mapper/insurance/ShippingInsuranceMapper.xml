<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.insurance.mapper.ShippingInsuranceMapper">
    
    <resultMap type="ShippingInsurance" id="ShippingInsuranceResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="insuranceStatus"    column="insurance_status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectShippingInsuranceVo">
        select id, order_id, insurance_status, create_by, create_time, update_by, update_time from shipping_insurance
    </sql>

    <select id="selectShippingInsuranceList" parameterType="ShippingInsurance" resultMap="ShippingInsuranceResult">
        <include refid="selectShippingInsuranceVo"/>
        <where>  
            <if test="orderId != null  and orderId != ''"> and order_id = #{orderId}</if>
            <if test="insuranceStatus != null  and insuranceStatus != ''"> and insurance_status = #{insuranceStatus}</if>
        </where>
    </select>
    
    <select id="selectShippingInsuranceById" parameterType="Long" resultMap="ShippingInsuranceResult">
        <include refid="selectShippingInsuranceVo"/>
        where id = #{id}
    </select>

    <insert id="insertShippingInsurance" parameterType="ShippingInsurance" useGeneratedKeys="true" keyProperty="id">
        insert into shipping_insurance
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null and orderId != ''">order_id,</if>
            <if test="insuranceStatus != null">insurance_status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null and orderId != ''">#{orderId},</if>
            <if test="insuranceStatus != null">#{insuranceStatus},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateShippingInsurance" parameterType="ShippingInsurance">
        update shipping_insurance
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null and orderId != ''">order_id = #{orderId},</if>
            <if test="insuranceStatus != null">insurance_status = #{insuranceStatus},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteShippingInsuranceById" parameterType="Long">
        delete from shipping_insurance where id = #{id}
    </delete>

    <delete id="deleteShippingInsuranceByIds" parameterType="String">
        delete from shipping_insurance where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>